<% if current_user %>
  <div id="menu" class="column grid_8">
    <ul>
      <li><%= link_to _("Home"), root_path %></li>
      <% if current_user.can 'users.administrate' %>
        <li><%= link_to _("Users"), users_path %></li>
      <% end %>
      <li><%= link_to _("Events"), events_path %></li>
    </ul>
  </div>
  
  <div id="user-info" class="column grid_4">
    <ul>
    	<li><%= link_to current_user.display_name, account_url %></li>
    	<li><%= link_to _('Logout'), logout_path %></li>
    </ul>
  </div>
<% else %>

  <div id="menu" class="column grid_8">
    <ul>
      <li><%= link_to _("Home"), root_path %></li>
      <li><%= link_to _("Events"), events_path %></li>
    </ul>
  </div>
  
